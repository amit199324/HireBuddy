<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_id_proof"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color_profile"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/white"
        android:background="@color/header"
        android:textSize="@dimen/sp_20"
        android:text="@string/idproof"
        android:gravity="center"/>
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/inOrder"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_10"/>
   <TextView
       android:id="@+id/txt_idproof"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/idproof"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:background="@color/grey"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
       android:paddingStart="@dimen/dp_15"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:id="@+id/txt_s_one"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/right_arrow"
            />
        <Spinner
            android:id="@+id/spin_idtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/dp_5"/>

    </RelativeLayout>

    <View
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"/>
    <TextView
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp_12"
        android:text="@string/idproof"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_uidproof"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/camera"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:text="@string/nfs"/>
        <TextView
            android:id="@+id/txt_uidproof_remove"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:text="x"
            android:background="@drawable/circle"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"
        />
   <TextView
       android:id="@+id/txt_addproof"
       android:paddingTop="@dimen/dp_5"
       android:paddingBottom="@dimen/dp_5"
       android:paddingStart="@dimen/dp_15"
       android:textStyle="bold"
       android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/aproof"
        android:textSize="@dimen/sp_16"
        android:background="@color/grey"
        android:padding="@dimen/dp_5"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:id="@+id/txt_s_two"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/right_arrow"
            />
        <Spinner
            android:id="@+id/spin_addtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/dp_5"/>

    </RelativeLayout>

    <View
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"
        />
    <TextView
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp_12"
        android:text="@string/aproof"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_uaddproof"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/camera"
        android:drawablePadding="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:text="@string/nfs"/>
        <TextView
            android:id="@+id/txt_uaddproof_remove"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:text="x"
            android:background="@drawable/circle"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"
        />
    <Button
        android:id="@+id/next_id_proof"
        style="@style/ButtonfillStyle"
        android:text="@string/next"
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dp_80"
        android:paddingEnd="@dimen/dp_80"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="next"
        android:background="@drawable/fill_button_pressed_selector"
        />
</LinearLayout>
