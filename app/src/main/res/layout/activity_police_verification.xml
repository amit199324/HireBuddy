<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_police_verification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color_profile"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/white"
        android:background="@color/header"
        android:textSize="@dimen/sp_20"
        android:text="@string/pv"
        android:gravity="center"/>
    <TextView
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:text="@string/duhpv"
        android:gravity="center"/>
    <RadioGroup
        android:id="@+id/rg_pv"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/rb_yes"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/rb_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_10"
            android:buttonTint="@color/yellow"
            android:layout_marginEnd="@dimen/dp_10"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/rb_no"
            android:layout_marginStart="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:textSize="@dimen/sp_16"
            android:buttonTint="@color/yellow"
            android:textColor="@color/black"/>
    </RadioGroup>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/ll_yespv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15">
    <TextView
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:text="@string/upvp"/>
    <TextView
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp_10"
        android:text="@string/vp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_veriproof"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/camera"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:text="@string/nfs"/>
        <TextView
            android:id="@+id/txt_pvudoc_remove"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:text="x"
            android:background="@drawable/circle"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"/>
    <ImageView
        android:layout_margin="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/police"/>

</LinearLayout>
<LinearLayout
    android:id="@+id/ll_nopv"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15">
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:text="@string/duhrbid"
        android:gravity="center"/>
    <RadioGroup
        android:id="@+id/rg_ref_id"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/rd_ridp_y"
        android:gravity="center">
        <RadioButton
            android:id="@+id/rd_ridp_y_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_10"
            android:buttonTint="@color/yellow"
            android:layout_marginEnd="@dimen/dp_10"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/rb_id_no_invisible"
            android:layout_marginStart="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:buttonTint="@color/yellow"/>
    </RadioGroup>

    <EditText
        android:id="@+id/edt_buddy_id_pv"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:hint="@string/erbid"
        android:textColorHint="@color/black"
        android:singleLine="true"
        android:background="@android:color/transparent"
        android:imeOptions="actionDone"
        android:maxLength="10"
        />
    <View
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"/>

</LinearLayout>
<!--*****************************************************-->
        <TextView
            android:id="@+id/tv_no_des"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_20"
            android:textSize="@dimen/_14sdp"
            android:gravity="center|center_vertical"
            android:textColor="@color/red"
            android:text="@string/nrid"
            />

<!--****************************************-->
    <Button
        android:id="@+id/btn_pv_next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/ButtonfillStyle"
        android:text="@string/next"
        android:layout_marginBottom="@dimen/dp_30"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dp_80"
        android:paddingEnd="@dimen/dp_80"
        android:layout_gravity="center|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fill_button_pressed_selector"
        />
    </RelativeLayout>
</LinearLayout>