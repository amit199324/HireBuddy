<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_smv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hirebuddy.activity.SocialMediaVerificationActivity"
    android:background="@color/background_color_profile">

    <TextView
        android:id="@+id/tv_header_smv"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/white"
        android:background="@color/header"
        android:textSize="@dimen/sp_20"
        android:text="@string/smv"
        android:gravity="center"/>
    <TextView
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:text="@string/plsmv"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/fb"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/fb"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/fb"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/verify"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/verified"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/verified"
        android:gravity="center_vertical"
        />

    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"/>

 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/twitter"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/twitter"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/twitter"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/right_arrow"
        android:drawablePadding="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/verified"
        android:gravity="center_vertical"
        />
    </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey"/>
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/linkedin"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/lin"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/lin"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/right_arrow"
        android:drawablePadding="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/verified"
        android:gravity="center_vertical"/>
    </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey"/>
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/insta"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/insta"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/insta"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/right_arrow"
        android:drawablePadding="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/verified"
        android:gravity="center_vertical"/>
    </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/gplus"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/gplus"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/gplus"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/right_arrow"
        android:drawablePadding="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/verified"
        android:gravity="center_vertical"/>
    </RelativeLayout>
        </LinearLayout>
    <Button
        android:id="@+id/btn_smv"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:paddingStart="@dimen/dp_80"
        android:paddingEnd="@dimen/dp_80"
        android:text="@string/next"
        android:background="@drawable/fill_button_pressed_selector"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/tv_skip_smv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/skip"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_10"/>



</LinearLayout>
