<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_security_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color_profile"
    tools:context="com.hirebuddy.activity.SecurityQuestionsActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/white"
        android:background="@color/header"
        android:textSize="@dimen/sp_20"
        android:text="@string/sq"
        android:gravity="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        android:text="@string/pstsq"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txt_qo"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/queso"
        android:textSize="@dimen/sp_16"
        android:background="@color/grey"
        android:drawableStart="@drawable/question"
        android:drawablePadding="@dimen/dp_10"
        android:paddingStart="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:id="@+id/txt_sqo"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:text="@string/syq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/right_arrow"
            android:background="@drawable/underlinegrey"
            android:padding="@dimen/dp_5"
            />

        <Spinner
            android:id="@+id/spin_syqo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/dp_5"/>

    </RelativeLayout>
    <EditText
        android:id="@+id/edt_eyq"
        android:visibility="gone"
        style="@style/edittextstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/eyq"
        android:background="@drawable/underlinegrey"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/edt_eyao"
        style="@style/edittextstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/eya"
        android:background="@drawable/underline"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="textCapSentences"
        />
    <TextView
        android:id="@+id/txt_qt"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/quest"
        android:textSize="@dimen/sp_16"
        android:background="@color/grey"
        android:drawableStart="@drawable/question"
        android:drawablePadding="@dimen/dp_10"
        android:paddingStart="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_15">
            <TextView
                android:id="@+id/txt_sqt"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="@string/syq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/right_arrow"
                android:background="@drawable/underlinegrey"
                android:padding="@dimen/dp_5"/>

            <Spinner
                android:id="@+id/spin_syqt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/dp_5"/>

        </RelativeLayout>
    <EditText
        android:id="@+id/edt_eyqt"
        style="@style/edittextstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/eyq"
        android:background="@drawable/underline"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/edt_eyat"
        style="@style/edittextstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/eya"
        android:background="@drawable/underline"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="textCapSentences"
        />
    <Button
        android:id="@+id/btn_sq_next"
        style="@style/ButtonfillStyle"
        android:text="@string/next"
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dp_80"
        android:paddingEnd="@dimen/dp_80"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fill_button_pressed_selector"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
