<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_pick_loc">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pickUpLoc"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:text="@string/full_name"
            android:textColor="@color/text_orange"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_full_name_ana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:padding="@dimen/dp_2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:textColorHint="@color/black"
            android:imeOptions="actionNext"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/line_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:text="@string/phone_number"
            android:textColor="@color/text_orange"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_phone_ana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:maxLength="10"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/line_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:text="@string/area"
            android:textColor="@color/text_orange"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_area_ana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/line_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:text="@string/city"
            android:textColor="@color/text_orange"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_city_ana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/line_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:text="@string/state"
            android:textColor="@color/text_orange"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_state_ana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/line_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:text="@string/pin_code"
            android:textColor="@color/text_orange"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_pin_code_ana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLength="6"
            android:inputType="number"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/line_back" />

        <RelativeLayout
            android:id="@+id/rl_setDefaultLoc_ana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_pickUpLoc"
            android:layout_marginBottom="45dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/checkbox_default_ana"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:text="@string/set_as_default"
                android:textColor="@color/black" />


            <CheckBox
                android:id="@+id/checkbox_default_ana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/set_default_selector"
                android:gravity="center_vertical" />

        </RelativeLayout>


        <Button
            android:id="@+id/btn_postWish_ana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox_default_ana"
            android:background="@color/back_orange"
            android:gravity="center"
            android:text="@string/post_your_wish"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>